{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container p-5">
        <div class="row d-flex justify-content-center">
            <div class="col-4">
                <h1 class="d-flex justify-content-center mb-5">Entrar</h1>
                {% if erro %}
                    <div>{{ erro.messageKey|trans(erro.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <input type="hidden" name="_target_path" value="/socio">
                    <input type="email" class="form-control" id="username" name="_username" value="{{ lastUsername }}" placeholder="Email">
                    <input type="password" class="form-control mt-3" id="password" name="_password" placeholder="Senha">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success mt-3">Entrar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
